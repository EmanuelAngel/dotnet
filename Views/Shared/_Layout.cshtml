<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - init</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/init.styles.css" asp-append-version="true" /> *@
    @* <script src="~/js/theme-switcher.js"></script> *@
    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("Pre-Scripts", required: false)
</head>

<body class="container">
    <header>
        <nav>
            <ul>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index" data-tooltip="Home" data-placement="bottom">
                        <i class="fa-solid fa-house"></i>
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" data-tooltip="Privacy"
                        data-placement="bottom">
                        <i class="fa-solid fa-shield-halved"></i>
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-controller="User" asp-action="Index" data-tooltip="Users"
                        data-placement="bottom">
                        <i class="fa-solid fa-user"></i>
                    </a>
                </li>
            </ul>
            <ul>
                <li>
                    @await Html.PartialAsync("_ThemeSwitcher")
                </li>
            </ul>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="Footer">
        <div>
            Real State -
            <a
                href="https://github.com/EmanuelAngel">
                Angel Emanuel
                <i class="fa-brands fa-github"></i>
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script type="module" src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
